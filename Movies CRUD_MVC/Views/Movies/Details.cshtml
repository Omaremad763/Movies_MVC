@model Movies_CRUD_MVC.Entites.Movie;

@{
    ViewData["Title"] = Model.Title;
}
<div class="row mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail"alt="@Model.Title"/>
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between">
            <h3> @Model.Title</h3>
        </div>
        <span class="mt-2">
            <i class="bi bi-star-fill text-warning"></i>
            <span class=" text-muted">@Model.rate.ToString("0.0")</span>
        </span>
   <span class="text-muted mr-3">
       <i class="bi bi-calendar-week"></i>
           @Model.year
   </span>
        <span class="text-muted">
            <i class="bi bi-calendar-film"></i>
            @Model.Genre.name
        </span>
    <p>@Model.Storyline</p>
    </div>
    </div>
